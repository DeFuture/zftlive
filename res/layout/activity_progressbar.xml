<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.zftlive.android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_go"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="走起" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="复位" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.zftlive.android.view.progressbar.RoundProgressBar
            android:id="@+id/roundProgressBar1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <com.zftlive.android.view.progressbar.RoundProgressBar
            android:id="@+id/roundProgressBar3"
            android_custom:style="FILL"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="center"
            android_custom:roundProgressColor="#C2C2C2"
            android_custom:roundWidth="1dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.zftlive.android.view.progressbar.RoundProgressBar
            android:id="@+id/roundProgressBar4"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:layout_marginRight="56dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <com.zftlive.android.view.progressbar.RoundProgressBar
            android:id="@+id/roundProgressBar2"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_gravity="center"
            android_custom:roundColor="#C6E2FF"
            android_custom:roundProgressColor="#CD3333"
            android_custom:roundWidth="10dip"
            android_custom:textIsDisplayable="false" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_google_styled"
        style="@style/ProgressBar_Mini"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:max="100"
        android:progress="40" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <com.zftlive.android.view.progressbar.VerticalProgressBar
        android:id="@+id/pb_vertical_custom"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="10dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/view_custom_progress_bar" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/pb_horizontal_custom"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/view_custom_progress_bar" />

</LinearLayout>